{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",             
    "allowJs": true,               
    "checkJs": true,              
    "outDir": "./dist",            
    "rootDir": "./src",           
    "noImplicitAny": true,        
    "esModuleInterop": true,      
    "preserveSymlinks": true,     
    "skipLibCheck": true,         
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "./src/**/*"
  ]
}
